{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules"
    ],
    "verbose": true,
    "watch": [
        "./views/pug/*",
        "./server.js",
        "./auth.js",
        "./router.js",
        "./controllers/*",
        "./model.js",
        "./public/*"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json,pug,css"
}
